<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AssignStudentsToGroupController">
    <Label layoutX="14.0" layoutY="14.0" text="Studenten toevoegen en verwijderen">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <ComboBox fx:id="courseComboBox" layoutX="11.0" layoutY="51.0" onAction="#fillGroupComboBox" prefHeight="25.0" prefWidth="300.0" promptText="Cursus" />
    <ComboBox fx:id="groupComboBox" layoutX="425.0" layoutY="51.0" prefHeight="25.0" prefWidth="299.0" promptText="Groep" />
    <Label layoutX="14.0" layoutY="79.0" text="Selecteer studenten die je wilt toevoegen">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <Label layoutX="425.0" layoutY="79.0" text="Selecteer studenten die je wilt verwijderen">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <ListView fx:id="studentList" layoutX="11.0" layoutY="106.0" prefHeight="200.0" prefWidth="300.0" />
    <Button layoutX="350.0" layoutY="162.0" mnemonicParsing="false" onAction="#doAssign" text="-&gt;">
        <font>
            <Font size="18.0" />
        </font>
    </Button>
    <Button layoutX="350.0" layoutY="218.0" mnemonicParsing="false" onAction="#doRemove" text="&lt;-">
        <font>
            <Font size="18.0" />
        </font>
    </Button>

    <ListView fx:id="studentsInGroupList" layoutX="425.0" layoutY="106.0" prefHeight="200.0" prefWidth="300.0" />
    <Button layoutX="11.0" layoutY="319.0" mnemonicParsing="false" onAction="#doMenu" text="Welkomstscherm">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
   <Label fx:id="warningLabel" layoutX="425.0" layoutY="341.0" text="Voor deze cursus zijn er nog geen groepen aangemaakt." visible="false" />
   <Button layoutX="152.0" layoutY="319.0" mnemonicParsing="false" onAction="#doShowSaveAlert" prefHeight="28.0" prefWidth="160.0" text="Exporteer quizresultaten" />
   <Label fx:id="savedLabel" alignment="TOP_LEFT" layoutX="342.0" layoutY="325.0" prefHeight="57.0" prefWidth="245.0" text="Label" visible="false" wrapText="true" />
</AnchorPane>
